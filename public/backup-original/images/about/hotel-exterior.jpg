<svg xmlns="http://www.w3.org/2000/svg" width="400" height="300" viewBox="0 0 400 300">
  <defs>
    <linearGradient id="skyGradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#87CEEB;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#B0E0E6;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="buildingGradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#F5DEB3;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#DEB887;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Sky background -->
  <rect width="400" height="200" fill="url(#skyGradient)"/>
  
  <!-- Mountains in background -->
  <polygon points="0,120 80,60 160,80 240,40 320,70 400,50 400,200 0,200" fill="#4682B4" opacity="0.6"/>
  
  <!-- Hotel building -->
  <rect x="80" y="100" width="240" height="120" fill="url(#buildingGradient)"/>
  
  <!-- Roof -->
  <polygon points="70,100 200,60 330,100" fill="#8B4513"/>
  
  <!-- Windows -->
  <rect x="100" y="120" width="20" height="25" fill="#4169E1"/>
  <rect x="140" y="120" width="20" height="25" fill="#4169E1"/>
  <rect x="180" y="120" width="20" height="25" fill="#4169E1"/>
  <rect x="220" y="120" width="20" height="25" fill="#4169E1"/>
  <rect x="260" y="120" width="20" height="25" fill="#4169E1"/>
  <rect x="300" y="120" width="20" height="25" fill="#4169E1"/>
  
  <rect x="100" y="160" width="20" height="25" fill="#4169E1"/>
  <rect x="140" y="160" width="20" height="25" fill="#4169E1"/>
  <rect x="180" y="160" width="20" height="25" fill="#4169E1"/>
  <rect x="220" y="160" width="20" height="25" fill="#4169E1"/>
  <rect x="260" y="160" width="20" height="25" fill="#4169E1"/>
  <rect x="300" y="160" width="20" height="25" fill="#4169E1"/>
  
  <!-- Main entrance -->
  <rect x="185" y="180" width="30" height="40" fill="#8B4513"/>
  <circle cx="210" cy="200" r="2" fill="#FFD700"/>
  
  <!-- Hotel sign -->
  <rect x="150" y="80" width="100" height="15" fill="#2F4F4F"/>
  <text x="200" y="92" text-anchor="middle" font-family="Arial" font-size="10" fill="white">RADIO HOTEL</text>
  
  <!-- Garden/landscaping -->
  <rect y="220" width="400" height="80" fill="#228B22"/>
  
  <!-- Trees -->
  <circle cx="40" cy="200" r="20" fill="#006400"/>
  <rect x="37" y="200" width="6" height="20" fill="#8B4513"/>
  
  <circle cx="360" cy="205" r="18" fill="#006400"/>
  <rect x="357" y="205" width="6" height="18" fill="#8B4513"/>
  
  <!-- Fountain -->
  <circle cx="200" cy="250" r="15" fill="#4169E1"/>
  <circle cx="200" cy="250" r="10" fill="#87CEEB"/>
  
  <!-- Parking area -->
  <rect x="20" y="240" width="60" height="30" fill="#696969"/>
  <rect x="25" y="245" width="15" height="8" fill="#FF0000"/>
  <rect x="45" y="245" width="15" height="8" fill="#0000FF"/>
  
  <text x="200" y="290" text-anchor="middle" font-family="Arial" font-size="14" fill="#2F4F4F">Radio Hotel Serra Negra</text>
</svg>