{
  "name": "radio-hotel",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:github": "next build && touch out/.nojekyll",
    "start": "next start",
    "export": "next build && next export",
    "deploy": "npm run build:github",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:a11y": "playwright test --grep=accessibility",
    "test:contrast": "node scripts/contrast-check.js",
    "lighthouse": "lhci autorun",
    "lighthouse:desktop": "npx lighthouse http://localhost:3000 --preset=desktop --output=json --output-path=.lighthouseci/lighthouse-desktop.json",
    "lighthouse:mobile": "npx lighthouse http://localhost:3000 --output=json --output-path=.lighthouseci/lighthouse-report.json",
    "lighthouse:accessibility": "npx lighthouse http://localhost:3000 --only-categories=accessibility --output=json --output-path=.lighthouseci/lighthouse-accessibility.json",
    "optimize-images": "node scripts/optimize-images.js",
    "optimize-images:replace": "node scripts/optimize-images.js && node scripts/replace-optimized-images.js",
    "thumbs:rooms": "node scripts/generate-room-thumbs.js",
    "thumbs:16x9": "node scripts/generate-16x9-thumbs.js"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "embla-carousel-react": "^8.6.0",
    "framer-motion": "^12.23.12",
    "i18next": "^25.4.2",
    "lucide-react": "^0.540.0",
    "next": "15.5.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-i18next": "^15.7.3",
    "swiper": "^12.0.3",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/eslintrc": "^3",
    "@lhci/cli": "^0.14.0",
    "@playwright/test": "^1.49.1",
    "@tailwindcss/postcss": "^4.1.12",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9",
    "eslint-config-next": "15.5.0",
    "jsdom": "^26.0.0",
    "playwright": "^1.56.1",
    "sharp": "^0.34.3",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.7",
    "typescript": "^5",
    "vitest": "^2.1.8"
  },
  "optionalDependencies": {
    "@tailwindcss/oxide-linux-x64-gnu": "^4.0.1",
    "lightningcss-linux-x64-gnu": "^1.29.1"
  }
}
